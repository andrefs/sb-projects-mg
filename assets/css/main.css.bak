/**************
 * Background *
 **************/

html, body {
    height: 100%;
    width: 100%;
}

.background {
    position:fixed;
    top: -100px;
    height: 120%;
    width: 120%;

  background: url(../imgs/bg.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  -webkit-filter : blur(20px);
  -moz-filter    : blur(20px);
  -o-filter      : blur(20px);
  -ms-filter     : blur(20px);
  filter         : blur(20px);
}

.ink-grid {
    top:0px;
}

